<?xml version="1.0"?>
<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config" xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">
    <scope-name>telefonica.coherence.var</scope-name>
    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>DATA_*</cache-name>
            <scheme-name>TELCO-distributed-var</scheme-name>
            <init-params>
                <init-param>
                    <param-name>expiry-delay</param-name>
                    <param-value>4d</param-value>
                </init-param>
            </init-params>
        </cache-mapping>
        <cache-mapping>
            <cache-name>CACHE_CTRL_*</cache-name>
            <scheme-name>TELCO-distributed-var</scheme-name>
            <init-params>
                <init-param>
                    <param-name>expiry-delay</param-name>
                    <param-value>1d</param-value>
                </init-param>
            </init-params>
        </cache-mapping>
    </caching-scheme-mapping>
    <caching-schemes>
        <!-- Proxy config  -->
        <proxy-scheme>
            <scheme-name>COHI-proxy-var</scheme-name>
            <service-name>COHI-ExtendTcpProxyService-VAR</service-name>
            <thread-count-min>32</thread-count-min>
            <acceptor-config>
                <tcp-acceptor>
                    <local-address>
                        <address system-property="movistar.coherence.proxyaddress"/>
                        <port system-property="movistar.coherence.proxyport.var">1</port>
                    </local-address>
                </tcp-acceptor>
            </acceptor-config>
            <!-- Only true for Proxy roles-->
            <autostart system-property="movistar.coherence.proxyenabled.var">false</autostart>
        </proxy-scheme>
        <distributed-scheme>
            <scheme-name>TELCO-distributed-var</scheme-name>
            <service-name>TELCO-DistributedCache-VAR</service-name>
            <thread-count-min>4</thread-count-min>
            <backing-map-scheme>
                <local-scheme>
                    <eviction-policy>LRU</eviction-policy>
                    <high-units>{back-size-limit 256}</high-units>
                    <unit-calculator>BINARY</unit-calculator>
                    <unit-factor>1048576</unit-factor>
                    <expiry-delay>{expiry-delay}</expiry-delay>
                </local-scheme>
            </backing-map-scheme>
            <autostart system-property="movistar.coherence.cacheenabled.var">false</autostart>
        </distributed-scheme>
    </caching-schemes>
</cache-config>